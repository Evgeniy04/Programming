<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Converter"
        xmlns:ViewModel="clr-namespace:View.ViewModel" xmlns:Model="clr-namespace:View.Model" x:Class="Contacts.MainWindow"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="800" Icon="/icon-user.png" Padding="15,15,15,15">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Window.DataContext>
        <ViewModel:MainVM/>
    </Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding SaveCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Width="3" Grid.ColumnSpan="1" Background="White"/>
        <Grid Grid.Column="1" Margin="8,8,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="3,3,3,3" Grid.ColumnSpan="2" Grid.Column="1">
                <Label Content="Name:" Margin="3,3,3,3" Padding="0,0,0,0"/>
                <TextBox TextWrapping="Wrap" Margin="3,3,3,3" Text="{Binding SelectedContact.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnlyContactTextBoxes}"/>
                <Label Content="Phone Number:" Margin="3,3,3,3" Padding="0,0,0,0"/>
                <TextBox TextWrapping="Wrap" Margin="3,3,3,3" Text="{Binding SelectedContact.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnlyContactTextBoxes}"/>
                <Label Content="Email:" Margin="3,3,3,3" Padding="0,0,0,0"/>
                <TextBox TextWrapping="Wrap" Margin="3,3,3,3" Text="{Binding SelectedContact.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnlyContactTextBoxes}"/>
                <Button Content="Apply" Height="25" Margin="3,50,3,3" Width="75" HorizontalAlignment="Left" Command="{Binding ApplyCommand}" Visibility="{Binding IsApplyVisible, 
                  Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
            <Image Height="100" VerticalAlignment="Top" Width="100" Source="/icon-user.png" Margin="3,28,3,0"/>
        </Grid>
        <Grid Background="#FFF8F8F8">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition/>
                <RowDefinition Height="39"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="2" Margin="8,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Add" Margin="3,3,3,3" VerticalAlignment="Top" Height="25" Command="{Binding AddContactCommand}"/>
                <Button Content="Edit" Margin="3,3,3,3" VerticalAlignment="Top" Height="25" Grid.Column="1" Command="{Binding EditContactCommand}"/>
                <Button Content="Remove" Margin="3,3,3,3" VerticalAlignment="Top" Height="25" Grid.Column="2" Command="{Binding RemoveContactCommand}"/>
            </Grid>
            <ListBox Grid.Row="1" ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedContact, Mode=TwoWay}" DisplayMemberPath="Name" Background="#f8f8f8" Margin="11,3,11,3" />
            <Grid Margin="8,8,8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox TextWrapping="Wrap" Text="" Margin="3,3,3,3" Grid.Column="1"/>
                <Label Content="Find:" Padding="0,0,0,0" Margin="3,3,3,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
