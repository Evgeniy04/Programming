<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="800" Icon="/icon-user.png">
    <Grid>
        <Grid Grid.RowSpan="2" ShowGridLines="True" Margin="15,15,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="31"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="81"/>
                    <ColumnDefinition Width="81"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="75"/>
                <Button Grid.Column="2" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="75"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
