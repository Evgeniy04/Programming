<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        xmlns:ViewModel="clr-namespace:View.ViewModel" x:Class="Contacts.MainWindow"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="800" Icon="/icon-user.png" Padding="15,15,15,15">
    <Window.DataContext>
        <ViewModel:MainVM/>
    </Window.DataContext>
    <Grid>
        <Grid Grid.RowSpan="2" ShowGridLines="True" Margin="15,15,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="31"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1" ShowGridLines="True" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="81"/>
                    <ColumnDefinition Width="81"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="75" Command="{Binding SaveCommand}"/>
                <Button Grid.Column="2" Content="Load" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="75" Command="{Binding LoadCommand}"/>
            </Grid>
            <GroupBox Header="Edit Contact" UseLayoutRounding="False" Margin="3,3,3,3">
                <StackPanel>
                    <Label Content="Name:" Margin="3,3,3,3" Padding="0,0,0,0"/>
                    <TextBox TextWrapping="Wrap" Margin="3,3,3,3" Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Phone Number:" Margin="3,3,3,3" Padding="0,0,0,0"/>
                    <TextBox TextWrapping="Wrap" Margin="3,3,3,3" Text="{Binding Path=PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Email:" Margin="3,3,3,3" Padding="0,0,0,0"/>
                    <TextBox TextWrapping="Wrap" Margin="3,3,3,3" Text="{Binding Path=Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Read Contact" UseLayoutRounding="False" Margin="3,3,3,3" Grid.Column="1">
                <StackPanel>
                    <Label Content="Name:" Padding="0,0,0,0" Margin="3,3,3,3"/>
                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" Margin="3,3,3,3" Text="{Binding Path=Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Phone Number:" Padding="0,0,0,0" Margin="3,3,3,3"/>
                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" Margin="3,3,3,3" Text="{Binding Path=PhoneNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Email:" Padding="0,0,0,0" Margin="3,3,3,3"/>
                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" Margin="3,3,3,3" Text="{Binding Path=Email, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </GroupBox>
        </Grid>

    </Grid>
</Window>
